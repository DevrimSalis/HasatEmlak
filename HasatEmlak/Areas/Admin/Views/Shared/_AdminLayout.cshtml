<!DOCTYPE html>
<html lang="tr" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HasatEmlak Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column h-100">
    <!-- Top Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "Admin" })">
                <i class="fas fa-cogs me-2"></i>HasatEmlak Admin
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home", new { area = "Admin" })">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Property", new { area = "Admin" })">
                            <i class="fas fa-home me-1"></i>İlanlar
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-cog me-1"></i>Ayarlar
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "Category", new { area = "Admin" })">
                                    <i class="fas fa-tags me-1"></i>Kategoriler
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "PropertyType", new { area = "Admin" })">
                                    <i class="fas fa-building me-1"></i>Emlak Türleri
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "City", new { area = "Admin" })">
                                    <i class="fas fa-map-marker-alt me-1"></i>Şehirler
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Contact", new { area = "Admin" })">
                            <i class="fas fa-envelope me-1"></i>Mesajlar
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle me-1"></i>Admin
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "Home")">
                                    <i class="fas fa-eye me-1"></i>Siteyi Görüntüle
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="#" onclick="confirmLogout()">
                                    <i class="fas fa-sign-out-alt me-1"></i>Çıkış Yap
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="d-flex flex-grow-1">
        <!-- Sidebar -->
        <div class="sidebar bg-light border-end">
            <div class="sidebar-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                           href="@Url.Action("Index", "Home", new { area = "Admin" })">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Property" ? "active" : "")"
                           href="@Url.Action("Index", "Property", new { area = "Admin" })">
                            <i class="fas fa-home me-2"></i>
                            İlanlar
                            <span class="badge bg-primary ms-auto" id="propertyCount">0</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <hr class="my-2">
                        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                            <span>YÖNETİM</span>
                        </h6>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Category" ? "active" : "")"
                           href="@Url.Action("Index", "Category", new { area = "Admin" })">
                            <i class="fas fa-tags me-2"></i>Kategoriler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "PropertyType" ? "active" : "")"
                           href="#PropertyTypes">
                            <i class="fas fa-building me-2"></i>Emlak Türleri
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Location" ? "active" : "")"
                           href="@Url.Action("Index", "Location", new { area = "Admin" })">
                            <i class="fas fa-map-marker-alt me-2"></i>Lokasyonlar
                        </a>
                    </li>

                    <li class="nav-item">
                        <hr class="my-2">
                        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                            <span>İLETİŞİM</span>
                        </h6>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Contact" ? "active" : "")"
                           href="@Url.Action("Index", "Contact", new { area = "Admin" })">
                            <i class="fas fa-envelope me-2"></i>
                            Mesajlar
                            <span class="badge bg-danger ms-auto" id="unreadCount">0</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <main class="flex-grow-1 p-4">
            <!-- Page Header -->
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">@ViewData["Title"]</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    @RenderSection("PageActions", required: false)
                </div>
            </div>

            <!-- Alerts -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Warning"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Warning"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Main Content Area -->
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>

    <script>
        // Global admin functions
        function confirmDelete(message = 'Bu işlemi geri alamazsınız!') {
            return confirm('Silmek istediğinizden emin misiniz?\n\n' + message);
        }

        function confirmLogout() {
            if (confirm('Çıkış yapmak istediğinizden emin misiniz?')) {
                window.location.href = '@Url.Action("Index", "Home")';
            }
        }

        // Load sidebar counts
        $(document).ready(function() {
            loadSidebarCounts();
        });

        function loadSidebarCounts() {
            // Property count
            $.get('@Url.Action("GetPropertyCount", "Home", new { area = "Admin" })', function(data) {
                $('#propertyCount').text(data);
            });

            // Unread messages count
            $.get('@Url.Action("GetUnreadCount", "Contact", new { area = "Admin" })', function(data) {
                $('#unreadCount').text(data);
                if (data > 0) {
                    $('#unreadCount').show();
                } else {
                    $('#unreadCount').hide();
                }
            });
        }
        function confirmLogout() {
    if (confirm('Çıkış yapmak istediğinizden emin misiniz?')) {
        window.location.href = '@Url.Action("Logout", "Auth", new { area = "Admin" })';
    }
}
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>