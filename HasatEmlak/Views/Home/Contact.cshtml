@section Scripts {
    <script>
        $(document).ready(function () {
            initializeMap();
        });

        function initializeMap() {
            // Ankara Çankaya koordinatları (HasatEmlak ofisi)
            var officeLocation = { lat: 39.9334, lng: 32.8597 };

            // Eğer Google Maps API yoksa basit bir placeholder göster
            if (typeof google === 'undefined') {
                $('#map').html(`
                            <div class="d-flex align-items-center justify-content-center h-100 bg-light">
                                <div class="text-center p-4">
                                    <i class="fas fa-map-marker-alt fa-4x text-primary mb-3"></i>
                                    <h5 class="text-primary">HasatEmlak Ofisi</h5>
                                    <p class="text-muted mb-1">Çankaya Mahallesi, Atatürk Bulvarı No: 123</p>
                                    <p class="text-muted mb-3">06420 Çankaya/Ankara</p>
                                    <div class="d-flex gap-2 justify-content-center">
                                        <a href="https://maps.google.com/?q=39.9334,32.8597" target="_blank" class="btn btn-primary btn-sm">
                                            <i class="fas fa-external-link-alt me-1"></i>Google Maps'te Aç
                                        </a>
                                        <a href="tel:+903121234567" class="btn btn-success btn-sm">
                                            <i class="fas fa-phone me-1"></i>Ara
                                        </a>
                                    </div>
                                </div>
                            </div>
                        `);
                return;
            }

            // Google Maps oluştur
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 16,
                center: officeLocation,
                mapTypeId: google.maps.MapTypeId.ROADMAP,
                styles: [
                    {
                        featureType: 'poi',
                        elementType: 'labels',
                        stylers: [{ visibility: 'off' }]
                    }
                ]
            });

            // Marker ekle
            var marker = new google.maps.Marker({
                position: officeLocation,
                map: map,
                title: 'HasatEmlak Ofisi',
                animation: google.maps.Animation.DROP,
                icon: {
                    url: 'data:image/svg+xml;base64,' + btoa(`
                                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="#dc3545">
                                    <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                                </svg>
                            `),
                    scaledSize: new google.maps.Size(40, 40)
                }
            });

            // Info window
            var infoWindow = new google.maps.InfoWindow({
                content: `
                            <div class="p-3" style="min-width: 250px;">
                                <div class="text-center mb-3">
                                    <i class="fas fa-home fa-2x text-primary"></i>
                                    <h6 class="mt-2 mb-0"><strong>HasatEmlak Ofisi</strong></h6>
                                </div>
                                <div class="mb-3">
                                    <p class="mb-1"><i class="fas fa-map-marker-alt text-danger me-2"></i>Çankaya Mahallesi</p>
                                    <p class="mb-1 ms-4">Atatürk Bulvarı No: 123</p>
                                    <p class="mb-3 ms-4">06420 Çankaya/Ankara</p>
                                </div>
                                <div class="mb-3">
                                    <p class="mb-1"><i class="fas fa-phone text-success me-2"></i>+90 312 123 45 67</p>
                                    <p class="mb-1"><i class="fas fa-envelope text-info me-2"></i>info@hasatemlak.com</p>
                                    <p class="mb-0"><i class="fas fa-clock text-warning me-2"></i>Pazartesi-Cuma: 09:00-18:00</p>
                                </div>
                                <div class="text-center">
                                    <a href="https://maps.google.com/?q=39.9334,32.8597" target="_blank" class="btn btn-primary btn-sm me-1">
                                        <i class="fas fa-route me-1"></i>Yol Tarifi
                                    </a>
                                    <a href="tel:+903121234567" class="btn btn-success btn-sm">
                                        <i class="fas fa-phone me-1"></i>Ara
                                    </a>
                                </div>
                            </div>
                        `
            });

            // Marker'a tıklandığında info window'u aç
            marker.addListener('click', function () {
                infoWindow.open(map, marker);
            });

            // Sayfa yüklendiğinde info window'u otomatik aç
            setTimeout(function () {
                infoWindow.open(map, marker);
            }, 1000);

            // Harita tıklanabilir alanları
            map.addListener('click', function () {
                infoWindow.close();
            });
        }
    </script>
}